@for (var i = FirstPage; i <= LastPage; ++i)
{
    <PrevNextSelectorItem ItemPage="i" /><text>&nbsp;</text>
}

@code {
    
    /// <summary>
    /// Inclusive
    /// </summary>
    [Parameter, EditorRequired]
    public required int FirstPage { get; init; }
    
    /// <summary>
    /// Inclusive
    /// </summary>
    [Parameter, EditorRequired]
    public required int LastPage { get; init; }
    
    /// <summary>
    /// The page that the user is currently requesting
    /// </summary>
    [CascadingParameter]
    public required int CurrentPage { get; init; }
    
    /// <summary>
    /// Given a page number, returns a link to that page
    /// </summary>
    [CascadingParameter]
    public required Func<int, string> GetLinkToPage { get; init; }
}